<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cover"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin_start"
            android:layout_marginTop="@dimen/margin_top_title"
            android:text="@string/title_text"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            app:layout_constraintEnd_toStartOf="@+id/share"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cover" />


        <ImageButton
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_share_24"
            android:backgroundTint="@color/white"
            android:layout_marginEnd="@dimen/default_margin_end"
            app:layout_constraintBottom_toBottomOf="@+id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title"/>

        <TextView
            android:id="@+id/author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_author"
            android:layout_marginEnd="@dimen/default_margin_end"
            android:text="@string/author"
            android:textSize="@dimen/author_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin_start"
            android:layout_marginTop="@dimen/margin_top_price"
            android:text="@string/price"
            android:textColor="@color/black"
            android:textSize="@dimen/price_text"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/author" />

        <TextView
            android:id="@+id/old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_old_price"
            android:text="@string/old_price"
            android:textSize="@dimen/price_text"
            app:layout_constraintStart_toEndOf="@+id/price"
            app:layout_constraintTop_toTopOf="@+id/price" />

        <ImageView
            android:id="@+id/line"
            android:layout_width="@dimen/line_width"
            android:layout_height="@dimen/line_height"
            android:background="@drawable/grey_background"
            android:backgroundTint="@color/red"
            app:layout_constraintBottom_toBottomOf="@+id/old_price"
            app:layout_constraintEnd_toEndOf="@+id/old_price"
            app:layout_constraintStart_toStartOf="@+id/old_price"
            app:layout_constraintTop_toTopOf="@+id/old_price" />


        <TextView
            android:id="@+id/sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sale"
            android:textColor="@color/white"
            android:textSize="@dimen/sale_text"
            android:background="@drawable/red_background"
            android:paddingStart="15dp"
            android:paddingTop="2dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/old_price"
            app:layout_constraintTop_toTopOf="@+id/price"
            app:layout_constraintBottom_toBottomOf="@+id/price" />


        <include
            android:id="@+id/button_pdf"
            layout="@layout/button_pdf"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_top_pdf"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sale" />


        <TextView
            android:id="@+id/promotion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin_start"
            android:layout_marginEnd="@dimen/default_margin_end"
            android:layout_marginTop="@dimen/margin_top_promotion"
            android:text="@string/promotion"
            style="@style/SubtitleText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_pdf" />

        <include
            android:id="@+id/promotion_details"
            layout="@layout/promotion"
            android:layout_height="@dimen/grey_rectangle_height"
            android:layout_width="@dimen/grey_rectangle_width"
            android:layout_marginTop="@dimen/margin_top_grey_rectangle"
            app:layout_constraintStart_toStartOf="@+id/promotion"
            app:layout_constraintTop_toBottomOf="@+id/promotion"/>


        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin_start"
            android:layout_marginTop="@dimen/margin_top_description"
            android:layout_marginEnd="@dimen/default_margin_end"
            android:text="@string/description"
           style="@style/SubtitleText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/promotion_details" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin_start"
            android:layout_marginTop="@dimen/margin_top_text"
            android:layout_marginEnd="@dimen/default_margin_end"
            android:text="@string/text"
            android:textSize="@dimen/long_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description" />

        <include
            android:id="@+id/button_show_all"
            layout="@layout/button_show_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin_start"
            android:layout_marginTop="@dimen/margin_top_show_all"
            android:layout_marginBottom="@dimen/margin_bottom_button_show_all"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>